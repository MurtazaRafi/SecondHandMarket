@model SecondHandMarket.Models.Advertisement

@{
    ViewData["Title"] = "Details";
}


<div>
    @*TODO gör en service som visar main cat och cat*@
    <p>Alla > @Model.Category.Name </p>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @if (Model.Pictures != null)
            {
                var count = 0;
                @foreach (var picture in Model.Pictures)
                {
                    if (count == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100 data-enlargeable" style="cursor: zoom-in" src="@Url.Content(picture.Path)" alt="">
                        </div>

                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100 data-enlargeable" style="cursor: zoom-in" src="@Url.Content(picture.Path)" alt="">
                        </div>
                    }
                    count++;
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div style="padding:15px;">
        <p>Inlagd: @Model.PublishDate</p>
        <h2>Säljes av: @Model.ApplicationUser.DisplayName</h2>
        <h1>@Html.DisplayFor(model => model.Title)</h1>
        <h2>@Model.Price kr</h2>

        <h5>@Model.Description</h5>
        <dl class="row">
            @*Todo: ha div:ar istället för tabell (responsiv)*@
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PublishDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location.Id)
            </dd>

            @* TODO: fixa bootstrap collapse bar. När klickar Kontakta (displayname) knapp: ser mejl och tel nr*@
            <dt class="col-sm-2">
                Kontakt
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.DisplayName)
            </dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
